{
  "name": "@softwarefactory-project/sf-ui",
  "version": "0.1.0",
  "description": "The patternfly based user interface for software factory",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "serve": "mkdir dist && rsync -a tests/api/ dist/api/ && parcel serve ./src/index.html",
    "dist": "npm run build && parcel build ./src/index.html --public-url /",
    "test": "npm run build && jest --verbose --testMatch **/tests/*.bs.js",
    "clean": "find src/ tests/ -name '*.bs.js' -delete && rm -Rf lib"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@patternfly/react-core": "^4.50.2",
    "@softwarefactory-project/re-patternfly": "file:../re-patternfly",
    "@softwarefactory-project/re-sf": "file:../re-sf",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "reason-react": "^0.9.1",
    "bs-fetch": "^0.6.2",
    "@glennsl/bs-json": "^5.0.2"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.5.1",
    "jest": "^26.5.0",
    "parcel": "^1.12.4",
    "bs-platform": "^8.2.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/tests/styleMock.js"
    }
  }
}
